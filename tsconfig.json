{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2021",
        "outDir": "dist",
        "lib": [
            "es2021"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "newLine": "LF",
        "importHelpers": true
    },
    "exclude": [
        "node_modules"
    ]
}
